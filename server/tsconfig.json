{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "moduleResolution": "node"
    },
    "filesGlob": [
        "../typings/**/*.ts",
        "../typings/**/*.tsx",
        "../common/**/*.ts",
        "../common/**/*.tsx",
        "./**/*.ts",
        "./**/*.tsx"
    ],
    "compileOnSave": true,
    "include": [
        "../typings/**/*",
        "../common/**/*",
        "./**/*"
    ]
}
