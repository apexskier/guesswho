{
    "compilerOptions": {
        "outDir": "../dist/",
        "sourceMap": true,
        "lib": [
            "es6",
            "es2015",
            "dom",
            "scripthost"
        ],
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "moduleResolution": "node"
    },
    "filesGlob": [
        "../typings/**/*.ts",
        "../typings/**/*.tsx",
        "../common/**/*.ts",
        "../common/**/*.tsx",
        "./**/*.ts",
        "./**/*.tsx"
    ],
    "compileOnSave": false,
    "include": [
        "../typings/**/*",
        "../common/**/*",
        "./**/*"
    ]
}
